{
    "name": "masterix21/laravel-bookings",
    "description": "Add bookings ability to any Eloquent model",
    "type": "library",
    "keywords": [
        "lucalongo",
        "laravel-bookings"
    ],
    "homepage": "https://github.com/masterix21/laravel-bookings",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Longo",
            "email": "l.longo@ambita.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^12.0",
        "kirschbaum-development/eloquent-power-joins": "^4.2",
        "nesbot/carbon": "^3.8",
        "spatie/laravel-package-tools": "^1.92",
        "spatie/period": "^2.4",
        "staudenmeir/belongs-to-through": "^2.16",
        "staudenmeir/eloquent-has-many-deep": "^1.20"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^8.1.1",
        "orchestra/testbench": "^10.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/pest-plugin-test-time": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Masterix21\\Bookings\\": "src",
            "Masterix21\\Bookings\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Masterix21\\Bookings\\Tests\\": "tests"
        }
    },
    "scripts": {
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "update-guidelines": "curl -o laravel-php-guidelines.md https://spatie.be/laravel-php-ai-guidelines.md"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Masterix21\\Bookings\\BookingsServiceProvider"
            ],
            "aliases": {
                "Bookings": "Masterix21\\Bookings\\BookingsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
